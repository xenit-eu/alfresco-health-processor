<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="HealthProcessor"
            class="org.alfresco.repo.management.subsystems.ChildApplicationContextFactory"
            parent="abstractPropertyBackedBean">
        <property name="autoStart" value="true"/>
    </bean>

    <bean id="eu.xenit.alfresco.healthprocessor.dictionaryBootstrap"
            parent="dictionaryModelBootstrap"
            depends-on="dictionaryBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/alfresco-health-processor/model/healthProcessorModel.xml</value>
            </list>
        </property>
    </bean>
    <bean class="eu.xenit.alfresco.healthprocessor.reporter.repository.ReportTypeBehavior">
        <constructor-arg ref="NodeService" />
        <constructor-arg ref="policyComponent" />
    </bean>
    <bean class="eu.xenit.alfresco.healthprocessor.reporter.repository.DetailsAspectBehavior">
        <constructor-arg ref="NodeService" />
        <constructor-arg ref="policyComponent" />
    </bean>

    <!--
    Proxy required to make Admin Console WebScript available in main Spring context
    -->
    <bean id="webscript.org.alfresco.enterprise.repository.admin.support-tools.health-processor-admin-console.get"
            class="org.alfresco.repo.management.subsystems.SubsystemProxyFactory">
        <property name="sourceApplicationContextFactory" ref="HealthProcessor"/>
        <property name="sourceBeanName"
                value="eu.xenit.alfresco.healthprocessor.webscripts.console.AdminConsoleWebScript"/>
        <property name="interfaces">
            <list>
                <value>org.springframework.extensions.webscripts.WebScript</value>
            </list>
        </property>
    </bean>

</beans>
