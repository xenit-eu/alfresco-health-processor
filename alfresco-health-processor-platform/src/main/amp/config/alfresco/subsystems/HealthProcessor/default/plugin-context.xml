<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- NOOP -->
    <bean id="eu.xenit.alfresco.healthprocessor.plugins.NoOpHealthProcessorPlugin"
            class="eu.xenit.alfresco.healthprocessor.plugins.NoOpHealthProcessorPlugin">
        <property name="enabled" value="${eu.xenit.alfresco.healthprocessor.plugin.noop.enabled}" />
    </bean>

    <!-- Content validation -->
    <bean id="eu.xenit.alfresco.healthprocessor.plugins.ContentValidationHealthProcessorPlugin"
            class="eu.xenit.alfresco.healthprocessor.plugins.ContentValidationHealthProcessorPlugin">
        <property name="enabled" value="${eu.xenit.alfresco.healthprocessor.plugin.content-validation.enabled}" />
        <constructor-arg name="serviceRegistry" ref="ServiceRegistry" />
        <constructor-arg name="propertyQNamesToValidate"
                value="${eu.xenit.alfresco.healthprocessor.plugin.content-validation.properties}" />
    </bean>

    <!-- Solr validation -->

    <bean class="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelectorBeanPostProcessor" autowire="constructor">
        <constructor-arg name="globalProperties" ref="global-properties" />
    </bean>

    <bean id="eu.xenit.alfresco.healthprocessor.plugins.solr.SolrIndexValidationHealthProcessorPlugin"
            class="eu.xenit.alfresco.healthprocessor.plugins.solr.SolrIndexValidationHealthProcessorPlugin">
        <property name="enabled" value="${eu.xenit.alfresco.healthprocessor.plugin.solr-index.enabled}" />
        <constructor-arg name="nodeService" ref="NodeService" />
        <constructor-arg name="solrServerSelector"
                ref="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelector" />
        <constructor-arg name="solrSearchExecutor"
                ref="eu.xenit.alfresco.healthprocessor.plugins.solr.SolrSearchExecutor" />
    </bean>

    <bean id="eu.xenit.alfresco.healthprocessor.plugins.solr.SolrSearchExecutor"
            class="eu.xenit.alfresco.healthprocessor.plugins.solr.SolrSearchExecutor" />

    <bean id="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelector"
            class="eu.xenit.alfresco.healthprocessor.plugins.solr.filter.SolrServerEndpointSelectorFilter"
            autowire-candidate="false">
        <constructor-arg ref="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelector@store-filter" />
        <constructor-arg ref="eu.xenit.alfresco.healthprocessor.plugins.solr.filter.SolrNodeFilter@aggregate" />
    </bean>

    <bean id="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelector@store-filter"
            class="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.IndexedStoreSolrServerEndpointSelectorFilter"
            autowire-candidate="false">
        <constructor-arg ref="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelector@aggregate" />
    </bean>


    <bean id="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.SolrServerEndpointSelector@aggregate"
            class="eu.xenit.alfresco.healthprocessor.plugins.solr.endpoint.AggregateEndpointSelector"
            autowire="constructor"
            autowire-candidate="false"
            />

    <bean id="eu.xenit.alfresco.healthprocessor.plugins.solr.filter.SolrNodeFilter@aggregate"
        class="eu.xenit.alfresco.healthprocessor.plugins.solr.filter.AggregateFilter"
        autowire="constructor"
        autowire-candidate="false"
        />

    <bean class="eu.xenit.alfresco.healthprocessor.plugins.solr.filter.PropertySolrNodeFilter">
        <constructor-arg ref="ServiceRegistry" />
        <constructor-arg name="filteredProperties">
            <map>
                <entry key="cm:isIndexed">
                    <value type="boolean">false</value>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean class="eu.xenit.alfresco.healthprocessor.plugins.solr.filter.DeletedSolrNodeFilter" />
</beans>
